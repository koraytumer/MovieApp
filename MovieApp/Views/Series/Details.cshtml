@model Series


    <div class="row">
        <div class="col-md-3">
            @await Component.InvokeAsync("CategorySeriesMenu")
        </div>
        <div class="col-md-9">
            <div class="card mb-3">
                <div class="card-body">
                    <div class="row no-gutter">
                        <div class="col-md-4">
                            <img src="~/img/@Model.ImageUrl" alt="@Model.Description" class="card-img" />
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title" style="text-align:center">
                                    <p>@Model.Name</p>
                                </h5>
                                <p class="card-text">
                                    @Html.Raw(@Model.Description)
                                </p>
                                <p class="card-text" style="text-align:end;">
                                    <br /><br /><br />
                                    <small class="text-muted">- days ago</small>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>





